<?xml version="1.0" encoding="UTF-8"?>

<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">

    <!-- VTypes -->
    <vType id="bus" vClass="bus"/>

    <vType id="on_demand_van" vClass="taxi"
           length="4.5"
           width="2.0"
           height="2.5"
           personCapacity="8"
           maxSpeed="16.67"
           accel="2.0"
           decel="4.5"
           sigma="0.5"
           speedFactor="1.0"
           speedDev="0.1"
           color="0.8,0.4,0.0">
        <param key="has.taxi.device" value="true"/>
        <param key="device.taxi.dispatch-algorithm" value="traci"/>
        <param key="device.taxi.idle-algorithm" value="taxistand"/>
        <!-- This must match the rerouter id above -->
        <param key="device.taxi.stands-rerouter" value="rr_drt_stands"/>

        <!-- Optional but recommended: choose closest/best stand, not always the first -->
        <param key="parking.ignoreDest" value="1"/>
        <param key="device.taxi.pickUpDuration" value="15"/>
        <param key="device.taxi.dropOffDuration" value="10"/>
    </vType>

    <vType id="on_demand_bus" vClass="taxi"
           length="12"
           personCapacity="85"
           maxSpeed="12.5"
           accel="1.2"
           decel="4.0"
           sigma="0.5"
           speedFactor="1.0"
           speedDev="0.1"
           color="0.2,0.6,0.8">
        <param key="has.taxi.device" value="true"/>
        <param key="device.taxi.dispatch-algorithm" value="traci"/>
        <param key="device.taxi.pickUpDuration" value="20"/>
        <param key="device.taxi.dropOffDuration" value="20"/>
    </vType>

